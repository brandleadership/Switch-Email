{% extends '_layout.twig' %}

{% set colOneContentElements = ['base/title-h1', 'base/text', 'base/cta', 'base/spacer', 'base/divider', 'base/table', 'base/event', 'base/spacer', 'base/news-snippet', 'base/spacer', 'base/smiley-rating'] %}
{% set colTwoContentElements = ['base/img-50'] %}
{% set colTwoRatio2ContentElements = ['base/title-h1', 'base/text', 'base/cta'] %}
{% set colTwoRatio1ContentElements = ['base/img-33'] %}
{% set colThreeContentElements = ['base/img-33'] %}

{% block content %}

    {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/layout-base/prototype/template.twig' %}
        {% block layout_base_dropzone %}

            {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/col-one/prototype/template.twig' %}
                {% block col_one_dropzone %}

                    {% for element in colOneContentElements %}
                        {% include '@bsi-cx/design-standard-library-email/content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                    {% embed '@bsi-cx/design-standard-library-email/content-elements/base/highlighted-content/prototype/template.twig' %}
                        {% block highlighted_content_dropzone %}
                            {% include '@bsi-cx/design-standard-library-email/content-elements/base/text/template.twig' %}
                        {% endblock %}
                    {% endembed %}

                {% endblock %}
            {% endembed %}

            {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

            {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/col-two/prototype/template.twig' %}
                {% block col_two_dropzone_1 %}

                    {% for element in colTwoContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                {% endblock %}
                {% block col_two_dropzone_2 %}

                    {% for element in colTwoContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                {% endblock %}
            {% endembed %}

            {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

            {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/col-two-ratio-2-1/prototype/template.twig' %}
                {% block col_two_ratio_2_1_dropzone_1 %}

                    {% for element in colTwoRatio2ContentElements %}
                        {% include '@bsi-cx/design-standard-library-email/content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                {% endblock %}
                {% block col_two_ratio_2_1_dropzone_2 %}

                    {% for element in colTwoRatio1ContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                {% endblock %}
            {% endembed %}

            {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

            {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/col-three/prototype/template.twig' %}
                {% block col_three_dropzone_1 %}

                    {% for element in colThreeContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                {% endblock %}
                {% block col_three_dropzone_2 %}

                    {% for element in colThreeContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                {% endblock %}
                {% block col_three_dropzone_3 %}

                    {% for element in colThreeContentElements %}
                        {% include './content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                {% endblock %}
            {% endembed %}

        {% endblock %}
    {% endembed %}

{% endblock %}