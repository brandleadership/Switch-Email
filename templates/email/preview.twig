                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                {% endblock %}
            {% endembed %}

            {% embed '@bsi-cx/design-standard-library-email/content-elements/layout/col-three/prototype/template.twig' %}
                {% block col_three_dropzone_1 %}

                    {% for element in colThreeContentElements %}
                        {% include '@bsi-cx/design-standard-library-email/content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

                {% endblock %}
                {% block col_three_dropzone_2 %}

                    {% for element in colThreeContentElements %}
                        {% include '@bsi-cx/design-standard-library-email/content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                    {% include '@bsi-cx/design-standard-library-email/content-elements/base/spacer/template.twig' %}

